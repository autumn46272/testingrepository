<?php
/**
 * Database Configuration
 * 
 * IMPORTANT: This file is in .gitignore for security.
 * You need to create this file manually on each environment (localhost, Hostinger, etc.)
 */

// Database credentials
$db_host = 'localhost';          // Usually 'localhost' on Hostinger
$db_name = 'your_database_name'; // Your database name on Hostinger
$db_user = 'your_database_user'; // Your database username
$db_pass = 'your_database_password'; // Your database password

try {
    $pdo = new PDO("mysql:host=$db_host;dbname=$db_name;charset=utf8mb4", $db_user, $db_pass);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    $pdo->setAttribute(PDO::ATTR_DEFAULT_FETCH_MODE, PDO::FETCH_ASSOC);
} catch (PDOException $e) {
    die("Connection failed: " . $e->getMessage());
}
?>
